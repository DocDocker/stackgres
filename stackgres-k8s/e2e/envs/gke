#!/bin/sh

GKE_NAME="${GKE_NAME:-stackgres-e2e}"
KUBERNETES_VERSION="${KUBERNETES_VERSION:-1.13.12}"
if [ "$KUBERNETES_VERSION" = 1.12.10 ]
then
  >&2 echo "Warning: using kubernetes version 1.13.11 since e2e default 1.12.10 is no longer available for gke"
  KUBERNETES_VERSION=1.13.11
fi
GKE_VERSION="${GKE_VERSION:-gke.23}"
GKE_REGION="${GKE_REGION:-us-west1}"
GKE_NODE_LOCATIONS="${GKE_NODE_LOCATIONS:-us-west1-a,us-west1-b,us-west1-c}"
GKE_MACHINE_TYPE="${GKE_MACHINE_TYPE:-n1-standard-1}"
GKE_DISK_SIZE="${GKE_DISK_SIZE:-20}"
GKE_PROJECT="${GKE_PROJECT:-default}"
GKE_OPTS="$GKE_OPTS"
GKE_SERVICEACCOUNT="${GKE_SERVICEACCOUNT:-stackgres-e2e}"

export GKE_NAME KUBERNETES_VERSION GKE_VERSION GKE_REGION GKE_NODE_LOCATIONS GKE_MACHINE_TYPE GKE_PROJECT GKE_OPTS

reuse_k8s() {
  if ! gcloud -q beta container --project "$GKE_PROJECT" clusters describe "$GKE_NAME" --region "$GKE_REGION" 2>&1 \
    | grep -q "status: RUNNING"
  then
    echo "Can not reuse gke environment $GKE_NAME"
    reset_k8s
    return
  fi

  echo "Reusing gke environment $GKE_NAME"

  gcloud -q beta container --project "$GKE_PROJECT" clusters get-credentials "$GKE_NAME" --region "$GKE_REGION"
}

reset_k8s() {
  echo "Setting up gke environment $GKE_NAME..."

  delete_k8s
  gcloud -q beta container --project "$GKE_PROJECT" clusters create "$GKE_NAME" \
    --region "$GKE_REGION" \
    --node-locations "$GKE_NODE_LOCATIONS" \
    --machine-type "$GKE_MACHINE_TYPE" \
    --disk-size "$GKE_DISK_SIZE" \
    --num-nodes 3 \
    --cluster-version "$KUBERNETES_VERSION-$GKE_VERSION" \
    --no-enable-autoupgrade \
    $GKE_OPTS

  if [ ! -f "$TARGET_PATH/gke-service-account.json" ]
  then
    gcloud --project "$GKE_PROJECT" iam service-accounts create "$GKE_SERVICEACCOUNT" || true

    ACCOUNT_EMAIL=$GKE_SERVICEACCOUNT@$GKE_PROJECT.iam.gserviceaccount.com
    ACCOUNT_MEMBER="serviceAccount:$ACCOUNT_EMAIL"

    gcloud projects add-iam-policy-binding "$GKE_PROJECT" --member="$ACCOUNT_MEMBER" --role=roles/storage.admin || true

    gcloud iam service-accounts keys create "$TARGET_PATH/gke-service-account.json" --iam-account "$ACCOUNT_EMAIL"
    
  fi

  echo "...done"
}

delete_k8s() {
  echo "Deleting gke environment $GKE_NAME..."

  if gcloud -q beta container --project "$GKE_PROJECT" clusters describe "$GKE_NAME" --region "$GKE_REGION" 2>&1 \
    | grep -q "status: RUNNING"
  then
    gcloud -q beta container --project "$GKE_PROJECT" clusters delete "$GKE_NAME" --region "$GKE_REGION" || true
  fi
  gcloud -q compute disks list --project "$GKE_PROJECT" --filter "zone:($GKE_REGION)" \
    | tail -n+2 | sed 's/ \+/|/g' | cut -d '|' -f 1-2 \
    | grep '^gke-'"$GKE_NAME"'-[0-9a-f]\{4\}-pvc-[0-9a-f]\{8\}-[0-9a-f]\{4\}-[0-9a-f]\{4\}-[0-9a-f]\{4\}-[0-9a-f]\{12\}|' \
    | xargs -r -n 1 -I % sh $(! echo $- | grep -q x || echo "-x") -ec "gcloud -q compute disks delete --project '$GKE_PROJECT' --zone \"\$(echo '%' | cut -d '|' -f 2)\" \"\$(echo '%' | cut -d '|' -f 1)\""

  echo "...done"
}

load_operator_k8s() {
  echo "Loading operator image $IMAGE_NAME in gke environemnt $GKE_NAME..."

  docker tag "$IMAGE_NAME" "gcr.io/$GKE_PROJECT/$IMAGE_NAME"
  gcloud -q docker -- push "gcr.io/$GKE_PROJECT/$IMAGE_NAME"

  echo "...done"
}

operator_pull_policy() {
  echo IfNotPresent
}

excluded_mutatingwebhookconfigurations() {
  echo "pod-ready.config.common-webhooks.networking.gke.io"
}

excluded_customresourcedefinitions() {
  echo "backendconfigs.cloud.google.com"
  echo "managedcertificates.networking.gke.io"
  echo "scalingpolicies.scalingpolicy.kope.io"
  echo "updateinfos.nodemanagement.gke.io"
}
