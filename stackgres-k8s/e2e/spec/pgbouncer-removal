#!/bin/sh

e2e_test() {
  run_test "Trying to delete sgconnectionpoolingconfigs with cluster running" delete_with_cluster

  run_test "Trying to delete sgconnectionpoolingconfigs without a cluster running" delete_whitout_cluster
}

delete_with_cluster() {
  if kubectl get -n "$CLUSTER_NAMESPACE" sgconnectionpoolingconfigs.stackgres.io pgbouncerconf -o yaml \
    | kubectl delete -f - > "${LOG_PATH}/test1.log" 2>&1
  then
    echo "ERROR: It should not be able to delete pgbouncerconf"
    return 1
  else
    echo "SUCCESS: Good it has failed"
  fi

  if grep -q "Can't delete sgconnectionpoolingconfigs.stackgres.io pgbouncerconf" "$LOG_PATH/test1.log"
  then
    echo "SUCCESS: Error message was the expected"
    return 0
  else
    ERROR="$(cat "$LOG_PATH/test1.log")"
    echo "FAIL: Error is not what it should be. ERROR: ${ERROR}"
    return 1
  fi
}

delete_whitout_cluster() {
  kubectl get -n "$CLUSTER_NAMESPACE" sgclusters.stackgres.io "$CLUSTER_NAME" -o yaml | kubectl delete -f - > /dev/null

  wait_pods_terminated "$CLUSTER_NAMESPACE"

  if kubectl get -n "$CLUSTER_NAMESPACE" sgconnectionpoolingconfigs.stackgres.io pgbouncerconf -o yaml \
    | kubectl delete -f - > "${LOG_PATH}/test2.log" 2>&1
  then
    echo "SUCCESS: Good. It has deleted the configuration"
    return 0
  else
    ERROR="$(cat "$LOG_PATH/test2.log")"
    echo "FAIL: It should be able to delete the pgbouncerconf. ERROR $ERROR"
    return 1
  fi
}
