#!/bin/sh
write_to(){
  FILE="$1"
  shift 1
  OUTPUT=$( "$@" )

  cat << EOF > "$FILE"
$OUTPUT
EOF
}

write_into(){
  local FILE
  local CONTENT
  while getopts ":f:c:" opt; do
    case $opt in
      f) FILE="$OPTARG"
      shift 2
      ;;
      c) CONTENT="$OPTARG"
      shift 2
      ;;
      \?)
      ;;
    esac
  done

  cat << EOF > "$FILE"
$CONTENT
EOF
}

echo_raw() {
  cat << EOF
$@
EOF
}

