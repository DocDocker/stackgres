#!/bin/sh

run_curl() {
  local POD=curl
  local NAMESPACE="${CLUSTER_NAMESPACE:-stackgres}"
  local SERVICE_NAMESPACE=stackgres
  local SERVICE=stackgres-restapi
  local RESOURCE_PATH="stackgres/sgcluster"
  local EXTRA_PARAMETERS=""
  local CONTENT_TYPE="application/json"
  local ACCEPT="application/json"
  local DATA_FILENAME=""
  local K8S_USERNAME=$(kubectl get secrets --namespace "$SERVICE_NAMESPACE" "$SERVICE" -o jsonpath="{.data.k8sUsername}" | base64 -d)
  local PASSWORD="admin" #$(kubectl get secrets --namespace "$SERVICE_NAMESPACE" "$SERVICE" -o jsonpath="{.data.password}" | base64 -d)
  local AUTHORIZATION="{ \"username\": \"$K8S_USERNAME\", \"password\": \"$PASSWORD\" }"
  local JWT=""
  while getopts ":p:n:s:N:r:c:e:d:a:j:" opt; do
    case $opt in
      p) POD="$OPTARG"
      ;;
      n) NAMESPACE="$OPTARG"
      ;;
      s) SERVICE="$OPTARG"
      ;;
      N) SERVICE_NAMESPACE="$OPTARG"
      ;;
      r) RESOURCE_PATH="$OPTARG"
      ;;
      e) EXTRA_PARAMETERS="$OPTARG"
      ;;
      c) CONTENT_TYPE="$OPTARG"
      ;;
      d) DATA_FILENAME="$OPTARG";
      ;;
      a) AUTHORIZATION="$OPTARG";
      ;;
      j) JWT="$OPTARG";
      ;;
      \?) echo "Invalid option -$OPTARG" >&2
      return 1
      ;;
    esac
  done

  if [ -n "$AUTHORIZATION" -a -z "$JWT" ]
  then
    JWT="$(kubectl exec -i -n "$NAMESPACE" "$POD" -- \
      curl -d "$AUTHORIZATION" -k "https://$SERVICE.$SERVICE_NAMESPACE.svc.cluster.local/stackgres/auth/login" \
      -H "Content-Type: $CONTENT_TYPE" \
      -H "Accept: $ACCEPT" | jq -r .access_token)"
  fi

  if [ -n "${DATA_FILENAME}" ]
  then
    tar cf - "$DATA_FILENAME" | kubectl exec -i -n "$NAMESPACE" "$POD" -- tar xf - -C /tmp
    kubectl exec -i -n "$NAMESPACE" "$POD" -- \
      curl -k "https://$SERVICE.$SERVICE_NAMESPACE.svc.cluster.local/$RESOURCE_PATH" \
      $(if [ -z "$JWT" ]; then true; else echo "-H \"Authorization: Bearer $JWT\""; fi) \
      -H "\"Content-Type: $CONTENT_TYPE\"" \
      -H "\"Accept: $ACCEPT\""  \
      --data @"/tmp/$DATA_FILENAME" -s $(echo $EXTRA_PARAMETERS)
  else
    kubectl exec -i -n "$NAMESPACE" "$POD" -- \
      curl -k "https://$SERVICE.$SERVICE_NAMESPACE.svc.cluster.local/$RESOURCE_PATH" \
      $(if [ -z "$JWT" ]; then true; else echo "-H \"Authorization: Bearer $JWT\""; fi) \
      -H "\"Content-Type: $CONTENT_TYPE\"" \
      -H "\"Accept: $ACCEPT\"" \
      -s $(echo $EXTRA_PARAMETERS)
  fi
}

uriencode() {
  jq -nr --arg v "$1" '$v|@uri'
}